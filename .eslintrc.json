{
  "extends": ["eslint:recommended","airbnb-base",
    "plugin:react/recommended"],
  "env": {
    "commonjs": true,
    "node": true,
    "mocha": true,
    "jest": true,
    "browser": true
  },
  "rules":{
    "func-names": 0,
    "padded-blocks": 0,
    "allowNamedFunctions": false,
    "prefer-arrow-callback": 0,
    "react/jsx-uses-react" : 2,
    "react/jsx-uses-vars" : 2,
    "react/react-in-jsx-scope" : 2
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  }
}
